datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  phoneNumber   String?   @unique
  gender        String?
  image         String?
  password      String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  avatar        String?

  bookings Booking[]
}

model City {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  departureSchedules Schedule[] @relation("scheduleDepartureCity")
  arrivalSchedules   Schedule[] @relation("scheduleArrivalCity")
}

model Vehicle {
  id        String   @id @default(cuid())
  name      String
  type      String // e.g., "Bus", "Travel"
  capacity  Int
  plate     String?  @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  schedules Schedule[]
}

model Schedule {
  id          String   @id @default(cuid())
  vehicleId   String
  departureId String
  arrivalId   String
  departureAt DateTime
  arrivalAt   DateTime
  price       Float
  seats       Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  vehicle   Vehicle   @relation(fields: [vehicleId], references: [id])
  departure City      @relation("scheduleDepartureCity", fields: [departureId], references: [id])
  arrival   City      @relation("scheduleArrivalCity", fields: [arrivalId], references: [id])
  bookings  Booking[]
}

model Booking {
  id          String   @id @default(cuid())
  userId      String
  namaLengkap String
  email       String
  phoneNumber String?
  scheduleId  String
  status      String // e.g., "Pending", "Confirmed", "Cancelled"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  type        String?

  user     User     @relation(fields: [userId], references: [id])
  schedule Schedule @relation(fields: [scheduleId], references: [id])
}
